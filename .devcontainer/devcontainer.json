{
	"name": "my-k8s",

	// Use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
        // Path is relataive to the devcontainer.json file.
        "dockerfile": "Dockerfile",
		"args": {
			"ARGOCD_VERSION": "v2.6.4",
			"ARGOROLLOUT_VERSION": "v1.4.1",
			"BUILDPACKS_VERSION": "v0.28.0"
		}
    },

	// Configure features
	"features": {
		"ghcr.io/devcontainers/features/go:1": {
			"version": "1.19.5",
			"golangciLintVersion": "latest"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"moby": true,
			"dockerDashComposeVersion": "v2",
			"installDockerBuildx": true
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "1.26.2",
			"helm": "none",
			"minikube": "1.29.0"
		},
		"ghcr.io/rio/features/kustomize:1": {}
	},
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "kubectl version",

	// Use 'postStartCommand' to run commands after the container is created like starting minikube.
	"postStartCommand": "nohup bash -c 'minikube start --kubernetes-version v1.26.2 &' > minikube.log 2>&1",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"oderwat.indent-rainbow"
			]
		}
	},

	// Configure hosts
	"runArgs": [
		"--add-host=rolling-update.dev.sample.io:192.168.49.2",
		"--add-host=blue-green.dev.sample.io:192.168.49.2",
		"--add-host=blue-green-preview.dev.sample.io:192.168.49.2",
		"--add-host=canary.dev.sample.io:192.168.49.2",
		"--add-host=canary-preview.dev.sample.io:192.168.49.2"
	]

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
